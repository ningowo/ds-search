<Configuration status="WARN">
    <Appenders>
        <Console name="CONSOLE" target="SYSTEM_OUT">
            <PatternLayout pattern="%d{HH:mm:ss.SSS} %level - [%-8c{1}] %msg%n"/>
        </Console>
    </Appenders>
    <Loggers>
        <Root level="DEBUG">
            <AppenderRef ref="CONSOLE"/>
        </Root>
        <Logger name="team.dsys.dssearch.cluster" level="DEBUG"/>
        <Logger name="io.microraft" level="DEBUG"/>
        <Logger name="com.netflix.governator" level="OFF"/>
    </Loggers>
</Configuration>